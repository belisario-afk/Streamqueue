{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker", "WebWorker.ImportScripts"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@spotify/*": ["src/spotify/*"],
      "@audio/*": ["src/audio/*"],
      "@visuals/*": ["src/visuals/*"],
      "@controllers/*": ["src/controllers/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"],
      "@recording/*": ["src/recording/*"]
    }
  },
  "include": ["src", "public/worklets/*", "public/workers/*"]
}